generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  MANAGER
  EMPLOYEE
}

model User {
  id               String   @id @default(uuid())
  name             String?
  email            String   @unique
  role             Role     @default(EMPLOYEE)
  isActive         Boolean  @default(true)
  registrationDate DateTime @default(now())
}
